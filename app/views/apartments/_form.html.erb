<%= form_with(model: apartment, local: true) do |form| %>

  <% if apartment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(apartment.errors.count, "件") %>のエラーが発生しました</h2>

      <ul>
        <% apartment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p><%= form.label :name, "物件名" %></p>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <p><%= form.label :fee, "賃料" %></p>
    <%= form.number_field :fee %>円
  </div>

  <div class="field">
    <p><%= form.label :address, "住所" %></p>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <p><%= form.label :age, "築年数" %></p>
    <%= form.number_field :age %>年
  </div>

  <div class="field">
    <p><%= form.label :notes, "備考" %></p>
    <%= form.text_area :notes %>
  </div>


  <%= form.fields_for :stations do |station| %>
    <h2>最寄駅<%= station.index + 1 %></h2>
    <div class="field">
      <p><%= station.label :line_name ,"路線名" %></p>
      <%= station.text_field :line_name %>
    </div>

    <div class="field">
      <p><%= station.label :station_name ,"駅名"%></p>
      <%= station.text_field :station_name %>
    </div>

    <div class="field">
      <p><%= station.label :minuites_on_foot ,"徒歩分数"%></p>
      <%= station.number_field :minuites_on_foot %>
    </div>
  <% end %>

  <br>

  <div class="actions">
    <%= form.submit "登録する" %>
  </div>
<% end %>
