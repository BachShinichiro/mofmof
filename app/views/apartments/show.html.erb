<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @apartment.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @apartment.fee %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @apartment.adress %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @apartment.age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @apartment.notes %>
</p>

<% @apartment.stations.each_with_index do |station, i| %>
  <h3>最寄駅<%= i + 1 %></h3>

  <p>
    <strong>路線名</strong>
    <%= station.line_name %>
  </p>

  <p>
    <strong>駅名</strong>
    <%= station.station_name %>
  </p>

  <p>
    <strong>徒歩分数</strong>
    <%= station.minuites_on_foot %>分
  </p>
<% end %>

<%= link_to '編集', edit_apartment_path(@apartment) %> |
<%= link_to '戻る', apartments_path %>
