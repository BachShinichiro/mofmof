<p id="notice"><%= notice %></p>
<h1>物件一覧</h1>
<table>
  <tr>
    <th>物件名</th>
    <th>賃料</th>
    <th>住所</th>
    <th>耐用年数</th>
    <th>備考</th>
  </tr>
  <% @apartments.each do |apartment| %>
  <tr>
    <td><%= apartment.name %></td>
    <td><%= apartment.fee %></td>
    <td><%= apartment.adress %></td>
    <td><%= apartment.age %></td>
    <td><%= apartment.notes %></td>
    <td><%= link_to '詳細', apartment_path(apartment.id) %></td>
    <td><%= link_to '編集', edit_apartment_path(apartment) %></td>
    <td><%= link_to '削除', apartment, method: :delete ,data: { confirm: '本当に削除していいですか？'} %></td>
  </tr>
  <% end %>
</table>

<a><%= link_to '物件を登録する', new_apartment_path %></a>
